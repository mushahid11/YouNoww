<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    android:layout_width="match_parent"
    app:elevation="@dimen/_10sdp"
    android:layout_height="wrap_content">

       <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="80dp"
            android:padding="3dp"
            android:layout_height="@dimen/_70sdp">

            <ImageView
                android:id="@+id/friend_activeStatus"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/_19sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:elevation="@dimen/_10sdp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:src="@drawable/dot" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_friend"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/_55sdp"
                android:src="@drawable/imran"
                android:layout_height="@dimen/_55sdp"
                app:civ_border_width="3dp"
                app:civ_border_color="#E6E3E3"/>



        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/friend_Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:text="Friends Name"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/Friend_MsgTime"
                    android:layout_gravity="center_vertical"
                    android:text="3 min age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/friend_msg"
                android:text="how are you friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
       </LinearLayout>


</androidx.cardview.widget.CardView>